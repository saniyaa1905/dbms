-- Step 1: Create tables (only once)
CREATE TABLE Dept (
    deptId INT,
    deptName VARCHAR(10)
);

CREATE TABLE Emp (
    empId INT,
    empName VARCHAR(10),
    empSal INT,
    empDeptId INT
);

-- Step 2: Insert records into Dept
INSERT INTO Dept VALUES (10, 'HR');
INSERT INTO Dept VALUES (30, 'Sales');
INSERT INTO Dept VALUES (40, 'IT');

-- Step 3: Insert records into Emp
INSERT INTO Emp VALUES (101, 'Aman', 25000, 10);
INSERT INTO Emp VALUES (102, 'Sneha', 18000, 30);
INSERT INTO Emp VALUES (103, 'Ravi', 12000, 40);
INSERT INTO Emp VALUES (104, 'Priya', 28000, 50);

-- Step 4: List employees belonging to department 10, 30, or 40
SELECT * 
FROM Emp 
WHERE empDeptId IN (10, 30, 40);

-- Step 5: List employee details whose salary is between 10000 and 30000
SELECT * 
FROM Emp 
WHERE empSal BETWEEN 10000 AND 30000;

-- Step 6: List total number of employees
SELECT COUNT(*) AS TotalEmployees 
FROM Emp;

-- Step 7: List average salary of each department
SELECT empDeptId, AVG(empSal) AS AverageSalary
FROM Emp
GROUP BY empDeptId;

-- Step 8: List employee details in ascending order of salary
SELECT * 
FROM Emp 
ORDER BY empSal ASC;
